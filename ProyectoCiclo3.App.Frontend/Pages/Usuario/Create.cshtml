@page
@model ProyectoCiclo3.App.Frontend.Pages.FormUsuarioModel
@{
}
 
<div class="text-center">
<form method="post">

  <label for="nombre" class="form-label">Nombre:</label>
  <input type="text" class="form-control" id="nombre" placeholder="Nombre" asp-for="Usuario.nombre" required>

  <label for="apellido" class="form-label">Apellido:</label>
  <input type="text" class="form-control" id="apellido" placeholder="Apellido" asp-for="Usuario.apellidos" required>

  <label for="direccion" class="form-label">Direccion:</label>
  <input type="text" class="form-control" id="direccion" placeholder="Direccion" asp-for="Usuario.direccion" required> 

    <label for="telefono" class="form-label">Telefono:</label>
  <input type="text" class="form-control" id="telefono" placeholder="Telefono" asp-for="Usuario.telefono" required>

  <hr>
  <button type="submit" class="btn btn-success">Enviar</button>
</form>
</div>